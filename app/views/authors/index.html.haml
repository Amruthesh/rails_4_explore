%h1
  Listing authors

%table
  %thead
    %tr
      %th
        Name
      %th
        Age
      %th
      %th
      %th
      %th
  %tbody
    - @authors.each do |author|
      %tr
        %td
          = author.name
        %td
          = author.age
        %td
          = link_to "View Books", books_path(author_id: author.id)
        %td
          = link_to 'Show', author
        %td
          = link_to 'Edit', edit_author_path(author)
        %td
          = link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Author', new_author_path