= form_for(@book) do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited this book from being saved:

      %ul
        - @book.errors.full_messages.each do |msg|
          %li
            = msg
  .field
    = f.label :Author
    %br/
    = f.select :author_id, authors_select
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :price
    %br/
    = f.text_field :price
  .actions
    = f.submit
